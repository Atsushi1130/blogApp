<div class="main_contents">
	<p class="post_index">投稿一覧</p>
	<% @posts.each do |post| %>
		<div class="post_container">
			<%= link_to(post.title,"/post/#{post.id}/detail",{class: "post_title",id: 'm_plus_rounded_1c'}) %>
			<p class="created_at"><%= post.created_at.to_s(:datetime_jp) %></p>
		</div>
	<% end %>
</div>

<div class="auther_container">
	<p>author:<%= @user.name %></p>
	<p>content</p>
	<p><%= @user.content %></p>
	<p>contact:<%= @user.email %></p>
	<p>管理者タグ</p>
	<% if @current_user %>
		<p><%= link_to "新規投稿", "/admin/post/new" %></p>
		<p><%= link_to "登録情報の編集","/admin/user/#{@user.id}/edit" %></p>
	<% else %>
		<p><%= link_to "ログイン","/admin/login_form" %></p>
	<% end %>
</div>

